@model IEnumerable<Category>

<div class=" container p-3 ">
    <div  class=" row p-4">
        <div class=" col-6">
            <h4 class="text-primary">Category List</h4>
        </div>
        <div class=" col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class=" btn btn-primary">
                <i class="bi bi-clipboard-plus"></i> &nbsp;  Create New Category
                </a>
        </div>
    </div>
<table class=" table table-bordered table-striped" style=" width:100%">
    <thead>
      <tr>
          <th>
              Category
          </th>
          <th>
             Display Order
          </th>
          <th></th>
      </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model ){
            <tr>
                <td width=" 50%">
                    @cat.Name
                </td>
            
                <td width=" 30%">
                    @cat.DisplayOrder
                </td>
                <td>
                    <div class=" w-75 btn-group " role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class=" btn btn-primary"><i class="bi bi-pen-fill"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class=" w-75 btn-group " role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class=" btn btn-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

    </table>
</div>